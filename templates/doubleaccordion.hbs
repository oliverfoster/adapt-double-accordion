<div class="doubleaccordion-inner component-inner" role="region" aria-label="{{_globals._components._accordion.ariaRegion}}">
    {{> component this}}
    <div class="doubleaccordion-widget component-widget">
        {{#each _items}}
        <div class="doubleaccordion-item">
            <button role="button" class="base doubleaccordion-item-title {{#if _isVisited}}visited{{/if}}" aria-expanded="false" aria-label="{{{title}}}">
              <div class="doubleaccordion-item-title-inner">
                <div class="doubleaccordion-item-title-icon icon icon-plus h5"></div>
                      {{{title}}}
              </div>
            </button>
            <div class="doubleaccordion-item-body">
                <div class="doubleaccordion-item-body-inner">
                    <div class="doubleaccordion-item-text">
                        {{{a11y_text body}}}
                    </div>
                    {{#if _graphic}}
                    {{#if _graphic.src}}
                    <div class="doubleaccordion-item-graphic">
                        <img src="{{_graphic.src}}" aria-label="{{_graphic.alt}}" tabindex="0">
                    </div>
                    {{/if}}
                    {{/if}}
                
                    <div class="doubleaccordion-children">
                    {{#each _child}}
                        <div class="doubleaccordion-child-item">
                            <button class="doubleaccordion-child-item-title">
                                {{{childTitle}}}
                            </button>
                            <div class="doubleaccordion-child-item-body">
                                {{{childBody}}}
                                {{#if _childGraphic}}
                                <div class="doubleaccordion-item-graphic">
                                    <img src="{{_childGraphic}}" aria-label="{{_graphic.alt}}" tabindex="0">
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    {{/each}}

                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
